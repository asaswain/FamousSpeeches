<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.swain.asa.SpeechPlayer" >

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- in application largeHeap tag requests extra memory for this application -->

    <application
        android:allowBackup="true"
        android:icon="@drawable/scroll_icon"
        android:label="@string/app_name"
        android:largeHeap="true">
        <activity
            android:name=".View.MainActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoBar1" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".View.PlayerActivity"
            android:configChanges="keyboardHidden|orientation"
            android:theme="@style/AppThemeNoBar2"
            android:screenOrientation="portrait" >
        </activity>
        <activity android:name=".View.ListActivity"
            android:theme="@style/AppThemeNoBar2">
        </activity>
        <activity android:name=".View.WikipediaActivity"
            android:theme="@style/AppThemeNoBar2">
        </activity>
        <activity android:name=".View.SpeechTextActivity"
            android:theme="@style/AppThemeNoBar2">
        </activity>

        <service
            android:name=".Controller.MediaPlayerService"
            android:enabled="true"
            android:exported="true" >
            <intent-filter android:label="@string/start_service" >
                <action android:name="edu.nyu.scps.speechplayer.service.MY_SERVICE" />
            </intent-filter>
        </service>
    </application>

</manifest>
