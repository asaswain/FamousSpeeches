<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.nyu.scps.SpeechPlayer" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="edu.nyu.scps.SpeechPlayer.View.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="edu.nyu.scps.SpeechPlayer.Controller.MediaPlayerService"
            android:enabled="true"
            android:exported="true">
            <intent-filter
                android:label="@string/start_service" >
                <action android:name="edu.nyu.scps.binder.service.MY_SERVICE"/>
            </intent-filter>
        </service>

    </application>

</manifest>
